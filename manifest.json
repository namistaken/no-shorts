{
  "manifest_version": 3,
  "name": "No Shorts",
  "version": "1.0.0",
  "description": "Remove YouTube Shorts from your feed",
  "permissions": ["storage", "activeTab"],
  "background": {
    "service_worker": "dist/background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["dist/content.js"]
    }
  ]
}
